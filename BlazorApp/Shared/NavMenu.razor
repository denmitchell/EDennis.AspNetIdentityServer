<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="claims">
                <span class="oi oi-tag" aria-hidden="true"></span> Claims
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="get">
                <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Get
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="edit">
                <span class="oi oi-pencil" aria-hidden="true"></span> Edit
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="delete">
                <span class="oi oi-trash" aria-hidden="true"></span> Delete
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
